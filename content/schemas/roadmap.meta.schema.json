{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Roadmap Metadata Schema",
  "type": "object",
  "required": ["id", "slug", "title", "type", "summary", "version"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for the roadmap"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "URL-friendly slug for the roadmap"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Display title of the roadmap"
    },
    "type": {
      "type": "string",
      "enum": ["role", "skill"],
      "description": "Type of roadmap - role-based or skill-based"
    },
    "summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "description": "Brief description of the roadmap"
    },
    "description": {
      "type": "string",
      "maxLength": 2000,
      "description": "Detailed description of the roadmap"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "uniqueItems": true,
      "description": "Tags for categorizing the roadmap"
    },
    "level": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced", "mixed"],
      "default": "mixed",
      "description": "Overall difficulty level of the roadmap"
    },
    "estimatedDuration": {
      "type": "string",
      "pattern": "^[0-9]+\\s+(weeks?|months?|years?)$",
      "description": "Estimated time to complete the roadmap"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the roadmap"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "github": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9-]){0,38}$"
          },
          "twitter": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_]{1,15}$"
          }
        }
      },
      "description": "Authors and contributors of the roadmap"
    },
    "changelog": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["version", "date", "changes"],
        "properties": {
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "changes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "description": "Version history and changes"
    },
    "seo": {
      "type": "object",
      "properties": {
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ogImage": {
          "type": "string",
          "format": "uri"
        }
      },
      "description": "SEO metadata"
    }
  }
}