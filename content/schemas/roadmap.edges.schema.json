{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Roadmap Edges Schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "from", "to", "type"],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "description": "Unique identifier for the edge"
      },
      "from": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "description": "Source node ID"
      },
      "to": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "description": "Target node ID"
      },
      "type": {
        "type": "string",
        "enum": ["requires", "optional", "related"],
        "description": "Type of relationship between nodes"
      },
      "label": {
        "type": "string",
        "maxLength": 50,
        "description": "Optional label for the edge"
      },
      "weight": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "default": 1,
        "description": "Weight/strength of the relationship (0-1)"
      },
      "bidirectional": {
        "type": "boolean",
        "default": false,
        "description": "Whether the relationship is bidirectional"
      }
    }
  }
}